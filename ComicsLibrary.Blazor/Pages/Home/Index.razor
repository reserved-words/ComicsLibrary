@page "/"
@inherits Pages.Home.IndexBase

<MudContainer Class="px-8" MaxWidth="MaxWidth.False">

    <MudBreadcrumbs Items="@Breadcrumbs"></MudBreadcrumbs>

    @if (Books == null)
    {
        <Loading />
    }
    else
    {
        <MudGrid>

            @foreach (var item in Books)
            {
                <MudItem xs="12" sm="4" md="3" lg="2">
                    <ReadingBookCard Book="@item" SkipNext="@SkipNext" SkipPrevious="@SkipPrevious" @key="item" />
                </MudItem>
            }
        </MudGrid>

    }

</MudContainer>
