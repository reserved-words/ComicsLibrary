@page "/"
@inherits Pages.IndexBase

<MudContainer Class="px-8" MaxWidth="MaxWidth.False">

    <MudBreadcrumbs Items="_items"></MudBreadcrumbs>

    <MudGrid>

        @foreach (var item in Books)
        {
            <MudItem xs="12" sm="4" md="3" lg="2">
                <ReadingBookCard Book="@item" SkipNext="@SkipNext" SkipPrevious="@SkipPrevious" />
            </MudItem>
        }
    </MudGrid>

</MudContainer>

@code  { 
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#"),
        new BreadcrumbItem("Currently Reading", href: null, disabled: true)
    };
}