@inherits SeriesCardBase

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="@Series.MudColor()">@Series.PublisherIcon</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Series.Title</MudText>
            <MudText Typo="Typo.body2">@Series.Years</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Label="Offset Left" Variant="Variant.Filled" Color="Color.Default" Direction="Direction.Left" OffsetX="true">
                @foreach (var action in Actions)
                {
                    <MudMenuItem OnClick="() => OnAction(Series, action)" >@action.Caption</MudMenuItem>
                }
            </MudMenu>
        </CardHeaderActions>
    </MudCardHeader>
    <MudProgressLinear Color="@Series.MudColor()" Value="@Series.Progress" />
    <MudCardMedia Image="@Series.ImageUrl" Height="350" />
</MudCard>