@inherits Components.BooklistCardBase

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle1">@Item.TypeName</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert">
                @foreach (var action in Actions)
                {
                    <MudMenuItem OnClick="() => OnAction(action)">@action.Caption</MudMenuItem>
                }
            </MudMenu>
        </CardHeaderActions>
    </MudCardHeader>

    <MudPaper Class="pa-3">
        <MudGrid>
            @foreach (var book in VisibleBooks)
            {
                <MudItem xs="12" sm="4" md="3" lg="2">
                    <LibraryBookCard Book="@book" @key="book" OnItemActionCompleted="@OnBookActionCompleted" />
                </MudItem>
            }
        </MudGrid>
    </MudPaper>
</MudCard>