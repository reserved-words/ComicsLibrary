@inherits Components.LibraryBase

<MudContainer Class="px-8" MaxWidth="MaxWidth.False">

    <MudToolBar Class="pa-0 mb-8">
        <MudBreadcrumbs Items="_items"></MudBreadcrumbs>
        <MudToolBarSpacer />
        <MudTextField @bind-Value="SearchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudFab Color="Color.Primary" Icon="@Icons.Material.Filled.GridView" Size="Size.Small" IconSize="Size.Small" Class="ml-2" Disabled="@GridView" OnClick="@EnableGridView" />
        <MudFab Color="Color.Primary" Icon="@Icons.Material.Filled.TableView" Size="Size.Small" IconSize="Size.Small" Class="ml-2" Disabled="@TableView" OnClick="@EnableTableView" />
    </MudToolBar>

    <SeriesGrid Series="@Items" Visible="@GridView" />

    <SeriesTable Series="@Items" Visible="@TableView" Filter="new Func<Series,bool>(FilterFunc)" />

</MudContainer>


@code {
    private List<BreadcrumbItem> _items => new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#"),
        new BreadcrumbItem("Library", href: "/library"),
        new BreadcrumbItem(ShelfName, href: null, disabled: true)
    };
}