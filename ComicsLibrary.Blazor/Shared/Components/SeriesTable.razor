@inherits Components.SeriesTableBase

<MudTable Class="@(Visible ? "" : "d-none")" Items="@Series" Dense="true" Hover="true" Filter="@Filter" @bind-SelectedItem="SelectedItem">
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Title</MudTd>
        <MudTd DataLabel="Name">@context.Years</MudTd>
        <MudTd DataLabel="Publisher">@context.Publisher</MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right;">
            @foreach (var action in context.Actions)
            {
                <MudTooltip Text="@action.Caption">
                    <MudIconButton Icon="@action.Icon" Color="Color.Default" OnClick="@action.Callback" />
                </MudTooltip>
            }
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>