@inherits Components.SeriesTableBase

<MudTable Class="@(Visible ? "" : "d-none")" Items="@Series" Dense="true" Hover="true" Filter="@Filter" @bind-SelectedItem="SelectedItem">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Publisher</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Title</MudTd>
        <MudTd DataLabel="Publisher">@context.Publisher</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>